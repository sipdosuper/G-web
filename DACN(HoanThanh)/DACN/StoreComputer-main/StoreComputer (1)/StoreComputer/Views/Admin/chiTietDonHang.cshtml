@model StoreComputer.Models.ChiTietDatHang

@{
    ViewBag.Title = "Chi tiết đặt hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Thông tin chi tiết đặt hàng</h2>

<div>
    <hr />
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tên hàng hóa</th>
                <th>Tên khách hàng</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Ngày đặt hàng</th>
                <th>Số lượng</th>
                <th>Tổng tiền</th>
                <th>Ghi chú</th>
                <th>Phương thức thanh toán</th>
                <th>Tình trạng thanh toán</th>
                <th>Tình trạng giao hàng</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.maHD)</td>
                <td>@Html.DisplayFor(model => model.HangHoa.tenHang)</td>
                <td>@Html.DisplayFor(model => model.DatHang.tenKhachHang)</td>
                <td>@Html.DisplayFor(model => model.DatHang.sdtKhachHang)</td>
                <td>@Html.DisplayFor(model => model.DatHang.diaChi)</td>
                <td>@Html.DisplayFor(model => model.DatHang.ngayDatHang)</td>
                <td>@Html.DisplayFor(model => model.soLuong)</td>
                <td>@Html.DisplayFor(model => model.thanhTien))</td>
                <td>@Html.DisplayFor(model => model.DatHang.ghiChu)</td>
                <td>@Html.DisplayFor(model => model.DatHang.ptThanhToan)</td>
                @if (Model.DatHang.tinhtrangThanhToan == "Chưa thanh toán")
                {
                    <td style="color:red">Chưa thanh toán</td>
                }
                else
                {
                    <td style="color:green">Đã thanh toán</td>
                }
                @if (Model.DatHang.tinhtrangDonHang == "Chưa giao hàng")
                {
                    <td style="color:red">Chưa giao hàng</td>
                }
                else
                {
                    <td style="color:green">Đã giao hàng</td>
                }

</tbody>
    </table>
</div>
<h6 class="m-0 font-weight-bold text-primary">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="~/Admin/suaDonHang?id=@Model.maHD" class="btn btn-success"> Sửa</a>
        </div>
</h6>
<div class="card-body">
    <a href="~/Admin/DonHang" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
        </span>
        <span class="text">Trở về trang trước</span>
    </a>
</div>
