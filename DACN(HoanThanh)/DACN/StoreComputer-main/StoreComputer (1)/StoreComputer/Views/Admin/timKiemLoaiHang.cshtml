@model List<StoreComputer.Models.LoaiHang>

@{
    ViewBag.Title = "DanhSachNhaCungCap";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Thông Tin Loại Hàng Cần Tìm Kiếm</h2>



<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <h6 class="m-0 font-weight-bold text-primary">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="~/Admin/CreateLoaiHang" class="btn btn-success"> Thêm Loại Hàng Hóa</a>
                        </div>
                </h6>
                <form action="~/Admin/timKiemNCC" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                    <div class="input-group">
                        <input type="type" class="form-control bg-light border-0 small" placeholder="Tìm kiếm..." required
                               name="SearchString" aria-label="Search" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Loại</th>
                            <th>Tên Loại Hàng</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.maLoai</td>
                                <td>@item.tenLoai</td>
                                <td>
                                    <h6 class="m-0 font-weight-bold text-primary">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">

                                                <a href="~/Admin/EditLoaiHang?id=@item.maLoai" class="btn btn-success"><i class="fa fa-plus"></i></a>
                                                <a href="~/Admin/DetailLoaiHang?id=@item.maLoai" class="btn btn-info"> <i class="fa fa-info"></i></a>
                                                <a href="~/Admin/DeleteLoaiHang?id=@item.maLoai" class="btn btn-danger"> <i class="fa fa-trash"></i></a>
                                            </div>
                                    </h6>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
