@model List<StoreComputer.Models.HangHoa>

@{
    ViewBag.Title = "G Computer";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="main">

    <div class="right">
        @foreach (var item in Model)
        {
            <ul class="products">
                <li>
                    <div class="product-item">
                        <div class="product-top">
                            <a href="~/Laptop/ChiTietLaptop?id=@item.maHang" class="product-thumb">
                                <img src="~/@item.hinhAnh" width="250px" height="250px" alt="" />
                            </a>
                            <a href="" class="order-now">Đặt hàng</a>
                        </div>
                        <div class="product-info">
                            <div class="product-cat">@item.LoaiHang.tenLoai</div>
                            <div class="product-name">@item.tenHang</div>
                            <div class="product-priceold">
                                <del> @String.Format("{0:#,##0}",item.giaCu)</del>
                                <div class="product-pricenew"> @String.Format("{0:#,##0}", item.giaMoi)<span>Đ</span></div>
                            </div>
                        </div>
                        </div>
                </li>
            </ul>
        }
    </div>
</div>
